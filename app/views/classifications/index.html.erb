<h1 align="center">Building Classifications</h1>

<div align="center">

<%= will_paginate %>

<% @classifications.each do |classification| %>


<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="article-title">

<%= link_to "#{classification.classification}", classification_path(classification) %>
        </li> 
<%= truncate(classification.class_description, length: 100) %>
            <li><small><%= pluralize(classification.articles.count, "Jobs") %></small></li>
        </div>

    </div>

</ul> 

<% end %>

<%= will_paginate %>

</div>